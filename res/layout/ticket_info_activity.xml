<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/app_background" >

    <TextView
        android:id="@+id/paid_header"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/green_gradient"
        android:gravity="center"
        android:shadowColor="#ff333333"
        android:shadowDx="2"
        android:shadowDy="1"
        android:shadowRadius="15"
        android:text="PAID"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/validate"
        android:layout_below="@id/paid_header"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:layout_marginLeft="8dp"
            android:text="REMAINING"
            android:textColor="#22222f"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextSwitcher
                android:id="@+id/remaining_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--
            <TextView
                    android:id="@+id/remaining_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="60sp"
                    android:textColor="#22222f"
                    android:text="1"
                    android:textStyle="normal"
                    android:gravity="center"
                    />
            -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="H"
                android:textColor="#22222f"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextSwitcher
                android:id="@+id/remaining_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--
            <TextView
                    android:id="@+id/remaining_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="60sp"
                    android:textColor="#22222f"
                    android:text="30"
                    android:textStyle="normal"
                    android:gravity="center"
                    />
            -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="M"
                android:textColor="#22222f"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextSwitcher
                android:id="@+id/remaining_seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="S"
                android:textColor="#22222f"
                android:textSize="60sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="VALID UNTIL:"
                android:textColor="#22222f"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expiration_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="3:00 PM"
                android:textColor="#33333f"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/green_button"
            android:shadowColor="#ff333333"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="15"
            android:text="ADD TIME"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <FrameLayout
            android:id="@+id/mapHolder"
            android:layout_width="match_parent"
            android:layout_height="200dp" >

        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@id/validate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/end_park"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/blue_button"
        android:shadowColor="#ff333333"
        android:shadowDx="2"
        android:shadowDy="1"
        android:shadowRadius="15"
        android:text="VALIDATE"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@id/end_park"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/red_button"
        android:shadowColor="#ff333333"
        android:shadowDx="2"
        android:shadowDy="1"
        android:shadowRadius="15"
        android:text="END PARK"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>