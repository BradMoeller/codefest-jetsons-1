<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal"
              android:background="@drawable/app_background" >
        >
    <TextView
            android:id="@+id/paid_header"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:textSize="45sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/green_gradient"
            android:text="VALIDATE"
            android:shadowColor="#ff333333"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="15"
            android:gravity="center"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#22222f"
            android:textStyle="bold"
            android:text="HAVE YOU'RE LOCAL AFFILIATE SCAN THE CODE TO REIMBURSE YOUR PAYMENT"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="*ONLY AT PARTICIPATING AFFILIATES*"
            />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/qr_container"
            />
</LinearLayout>